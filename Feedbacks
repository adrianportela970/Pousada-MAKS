<body>

    <div class="form-container">
        <div class="div-logo">
            <img src="index/imgns/logo.png" alt="logo da te-levo-mobile">
            <h1> Pousada MAKS</h1>
        </div>
        <h4>Sua avaliação é importante para nós!</h4>
        <form onsubmit="enviarDados(event)">

            <div class="question-group">
                <label>Como você avalia nosso serviço?</label>
                <div id="star-rating">
                    <span class="star" data-value="1">&#9733;</span>
                    <span class="star" data-value="2">&#9733;</span>
                    <span class="star" data-value="3">&#9733;</span>
                    <span class="star" data-value="4">&#9733;</span>
                    <span class="star" data-value="5">&#9733;</span>
                </div>
                <input type="hidden" name="avaliacao" id="avaliacao" required>
            </div>

            <div class="question-group">
                <label>Feedback de melhoria:</label>
                <textarea name="feedback" rows="5" placeholder="Descreva mais detalhes suas recomendações" required></textarea>
            </div>
            <p style="text-align: center;">Aqui, a sua opinião importa!</p>
            <button class="enviar" type="submit" id="btnEnviar">Enviar</button>
        </form>
    </div>

    <script>
        const stars = document.querySelectorAll('#star-rating .star');
        const avaliacaoInput = document.getElementById('avaliacao');

        stars.forEach(star => {
            star.addEventListener('click', () => {
                const rating = star.getAttribute('data-value');
                avaliacaoInput.value = rating;

                stars.forEach(s => {
                    s.style.color = s.getAttribute('data-value') <= rating ? '#FFD700' : '#ccc';
                });
            });
        });

        const script_do_google = 'https://script.google.com/macros/s/AKfycbyZtmsh6qApP5Z_xIFkI0mdBsM5eriz768Z0BK_tA3yloUta2f0OzX8HEbuV-rvvcLwSg/exec';

        function enviarDados(event) {
            event.preventDefault();

            const form = event.target;
            const btn = document.getElementById('btnEnviar');
            
            // Validação simples
            if(!form.avaliacao.value) {
                alert("Por favor, selecione uma nota clicando nas estrelas.");
                return;
            }

            btn.disabled = true;
            btn.innerText = "Enviando...";

            const dados = new URLSearchParams();
            dados.append('avaliacao', form.avaliacao.value);
            dados.append('feedback', form.feedback.value);

            fetch(script_do_google, {
                method: 'POST',
                mode: 'no-cors', // Essencial para evitar erros de política do navegador
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded'
                },
                body: dados.toString()
            })
            .then(() => {
                // No modo no-cors o fetch não retorna o JSON, mas o sucesso é quase garantido se não cair no catch
                alert("Dados enviados com sucesso!");
                form.reset();
                stars.forEach(s => s.style.color = '#ccc');
                avaliacaoInput.value = "";
            })
            .catch(error => {
                console.error('Erro no envio!', error);
                alert('Ocorreu um erro ao enviar. Tente novamente.');
            })
            .finally(() => {
                btn.disabled = false;
                btn.innerText = "Enviar";
            });
        }
    </script>
</body>

